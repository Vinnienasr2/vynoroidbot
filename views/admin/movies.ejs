<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 bg-white border-end min-vh-100 p-0">
                <% include('../partials/sidebar', { activePage: 'movies' }) %>
            </div>
            <div class="col-md-9 col-lg-10 p-4">
                <h2 class="mb-4">Movies Management</h2>
                <a href="/admin/movies/add" class="btn btn-success mb-3">Add Movie</a>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Thumbnail</th>
                            <th>File ID</th>
                            <th>Cost</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% movies.forEach(movie => { %>
                        <tr>
                            <td><%= movie.id %></td>
                            <td><%= movie.title %></td>
                            <td><img src="<%= movie.thumbnail %>" alt="Thumbnail" style="width:60px;height:60px;"></td>
                            <td><%= movie.file_id %></td>
                            <td>KES <%= movie.cost %></td>
                            <td><%= movie.created_at %></td>
                            <td>
                                <a href="/admin/movies/edit/<%= movie.id %>" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/admin/movies/delete/<%= movie.id %>" method="POST" style="display:inline-block;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
