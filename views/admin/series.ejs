<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Series</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="mb-4">Series Management</h2>
        <a href="/admin/series/add" class="btn btn-success mb-3">Add Series</a>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Thumbnail</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% series.forEach(s => { %>
                <tr>
                    <td><%= s.id %></td>
                    <td><%= s.title %></td>
                    <td><img src="<%= s.thumbnail %>" alt="Thumbnail" style="width:60px;height:60px;"></td>
                    <td><%= s.created_at %></td>
                    <td>
                        <a href="/admin/series/edit/<%= s.id %>" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/admin/series/<%= s.id %>/episodes" class="btn btn-info btn-sm">Manage Episodes</a>
                        <form action="/admin/series/delete/<%= s.id %>" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
