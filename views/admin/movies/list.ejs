<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="mb-4">Movies Management</h2>
        <form class="mb-3" method="GET" action="/admin/movies/list">
            <div class="input-group">
                <input type="text" class="form-control" name="search" value="<%= search %>" placeholder="Search by title">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>
        <a href="/admin/movies/add" class="btn btn-success mb-3">Add Movie</a>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Thumbnail</th>
                    <th>File ID</th>
                    <th>Cost</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% movies.forEach(movie => { %>
                <tr>
                    <td><%= movie.id %></td>
                    <td><%= movie.title %></td>
                    <td><img src="<%= movie.thumbnail %>" alt="Thumbnail" style="width:60px;height:60px;"></td>
                    <td><%= movie.file_id %></td>
                    <td>KES <%= movie.cost %></td>
                    <td><%= movie.created_at %></td>
                    <td>
                        <a href="/admin/movies/edit/<%= movie.id %>" class="btn btn-primary btn-sm">Edit</a>
                        <form action="/admin/movies/delete/<%= movie.id %>" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% if (pagination.total > 1) { %>
        <nav>
            <ul class="pagination">
                <% for (let i = 1; i <= pagination.total; i++) { %>
                <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"><%= i %></a>
                </li>
                <% } %>
            </ul>
        </nav>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
