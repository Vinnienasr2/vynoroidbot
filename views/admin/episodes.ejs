<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Episodes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="mb-4">Episodes Management</h2>
        <a href="/admin/series/<%= seriesId %>/episodes/add" class="btn btn-success mb-3">Add Episode</a>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Episode Number</th>
                    <th>File ID</th>
                    <th>Poster</th>
                    <th>Cost</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% episodes.forEach(e => { %>
                <tr>
                    <td><%= e.id %></td>
                    <td><%= e.episode_number %></td>
                    <td><%= e.file_id %></td>
                    <td><img src="<%= e.poster %>" alt="Poster" style="width:60px;height:60px;"></td>
                    <td>KES <%= e.cost %></td>
                    <td>
                        <a href="/admin/series/<%= seriesId %>/episodes/edit/<%= e.id %>" class="btn btn-primary btn-sm">Edit</a>
                        <form action="/admin/series/<%= seriesId %>/episodes/delete/<%= e.id %>" method="POST" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
