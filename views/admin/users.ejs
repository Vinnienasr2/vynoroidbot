<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 bg-white border-end min-vh-100 p-0">
                <div class="list-group list-group-flush">
                    <a href="/admin/dashboard" class="list-group-item list-group-item-action active">Dashboard</a>
                    <a href="/admin/users" class="list-group-item list-group-item-action">Users</a>
                    <a href="/admin/movies" class="list-group-item list-group-item-action">Movies</a>
                    <a href="/admin/series" class="list-group-item list-group-item-action">Series</a>
                    <a href="/admin/transactions" class="list-group-item list-group-item-action">Transactions</a>
                    <a href="/admin/settings" class="list-group-item list-group-item-action">Settings</a>
                    <a href="/admin/files" class="list-group-item list-group-item-action">Files Not In DB</a>
                </div>
            </div>
            <div class="col-md-9 col-lg-10 p-4">
                <h2 class="mb-4">Users Management</h2>
                <a href="/admin/users/add" class="btn btn-success mb-3">Add User</a>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Telegram ID</th>
                            <th>Username</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Active</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.telegram_id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.first_name %></td>
                            <td><%= user.last_name %></td>
                            <td><%= user.is_active ? 'Yes' : 'No' %></td>
                            <td><%= user.created_at %></td>
                            <td>
                                <a href="/admin/users/edit/<%= user.id %>" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline-block;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
